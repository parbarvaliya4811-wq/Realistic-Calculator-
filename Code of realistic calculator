    <audio id="clickSound" preload="auto">
        <source src="data:audio/wav;base64,UklGRhIAAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQA=" type="audio/wav">
    </audio>

    <script>
        function playClick(button) {
            // Visual click effect
            const effect = document.createElement('div');
            effect.className = 'click-effect';
            button.appendChild(effect);
            setTimeout(() => effect.remove(), 300);

            // Audio click - using Web Audio API for better sound
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = 800;
            oscillator.type = 'sine';
            
            gainNode.gain.setValueAtTime(0.1, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.05);
            
            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.05);
        }

        class Calculator {
            constructor(previousElement, currentElement) {
                this.previousElement = previousElement;
                this.currentElement = currentElement;
                this.clear();
                this.memory = 0;
                this.grandTotalValue = 0;
            }

            clear() {
                this.currentOperand = '0';
                this.previousOperand = '';
                this.operation = undefined;
                this.shouldResetScreen = false;
                this.updateDisplay();
            }

            delete() {
                if (this.currentOperand === '0' || this.currentOperand === 'Error') return;
                
                if (this.currentOperand.length === 1) {
                    this.currentOperand = '0';
                } else {
                    this.currentOperand = this.currentOperand.slice(0, -1);
                }
                this.updateDisplay();
            }

            backspace() {
                this.delete();
            }

            memoryClear() {
                this.memory = 0;
            }

            memoryRecall() {
                if (this.memory !== 0) {
                    this.currentOperand = this.memory.toString();
                    this.updateDisplay();
                }
            }

            memoryStore() {
                this.memory = parseFloat(this.currentOperand);
            }

            memoryAdd() {
                this.memory += parseFloat(this.currentOperand);
                this.shouldResetScreen = true;
            }

            memorySubtract() {
                this.memory -= parseFloat(this.currentOperand);
                this.shouldResetScreen = true;
            }

            percentage() {
                const current = parseFloat(this.currentOperand);
                if (this.previousOperand && this.operation) {
                    const prev = parseFloat(this.previousOperand);
                    this.currentOperand = ((prev * current) / 100).toString();
                } else {
                    this.currentOperand = (current / 100).toString();
                }
                this.updateDisplay();
            }

            squareRoot() {
                const current = parseFloat(this.currentOperand);
                if (current < 0) {
                    this.showError();
                    return;
                }
                this.currentOperand = Math.sqrt(current).toString();
                this.shouldResetScreen = true;
                this.updateDisplay();
            }

            square() {
                const current = parseFloat(this.currentOperand);
                this.currentOperand = (current * current).toString();
                this.shouldResetScreen = true;
                this.updateDisplay();
            }

            reciprocal() {
                const current = parseFloat(this.currentOperand);
                if (current === 0) {
                    this.showError();
                    return;
                }
                this.currentOperand = (1 / current).toString();
                this.shouldResetScreen = true;
                this.updateDisplay();
            }

            toggleSign() {
                if (this.currentOperand === '0') return;
                if (this.currentOperand.startsWith('-')) {
                    this.currentOperand = this.currentOperand.slice(1);
                } else {
                    this.currentOperand = '-' + this.currentOperand;
                }
                this.updateDisplay();
            }

            grandTotal() {
                this.currentOperand = this.grandTotalValue.toString();
                this.updateDisplay();
            }

            checkCorrect() {
                // Toggle between last operation and current value
                if (this.previousOperand) {
                    const temp = this.currentOperand;
                    this.currentOperand = this.previousOperand;
                    this.previousOperand = temp;
                    this.updateDisplay();
                }
            }

            appendNumber(number) {
                if (this.shouldResetScreen) {
                    this.currentOperand = '0';
                    this.shouldResetScreen = false;
                }

                if (this.currentOperand === 'Error') {
                    this.currentOperand = '0';
                }

                if (number === '.' && this.currentOperand.includes('.')) return;

                if (number === '00') {
                    if (this.currentOperand === '0') return;
                    this.currentOperand += '00';
                } else if (this.currentOperand === '0' && number !== '.') {
                    this.currentOperand = number;
                } else {
                    this.currentOperand += number;
                }

                this.updateDisplay();
            }

            chooseOperation(operation) {
                if (this.currentOperand === 'Error') {
                    this.clear();
                    return;
                }

                if (this.operation !== undefined && !this.shouldResetScreen) {
                    this.compute();
                }

                this.operation = operation;
                this.previousOperand = this.currentOperand;
                this.shouldResetScreen = true;
                this.updateDisplay();
            }

            compute() {
                let result;
                const prev = parseFloat(this.previousOperand);
                const current = parseFloat(this.currentOperand);

                if (isNaN(prev) || isNaN(current)) return;

                switch (this.operation) {
                    case '+':
                        result = prev + current;
                        break;
                    case '-':
                        result = prev - current;
                        break;
                    case '×':
                        result = prev * current;
                        break;
                    case '÷':
                        if (current === 0) {
                            this.showError();
                            return;
                        }
                        result = prev / current;
                        break;
                    default:
                        return;
                }

                if (!isFinite(result)) {
                    this.showError();
                    return;
                }

                result = Math.round(result * 100000000) / 100000000;

                if (Math.abs(result) > 999999999999) {
                    result = result.toExponential(6);
                }

                this.grandTotalValue += result;
                this.currentOperand = result.toString();
                this.operation = undefined;
                this.previousOperand = '';
                this.shouldResetScreen = true;
                this.updateDisplay();
            }

            showError() {
                this.currentOperand = 'Error';
                this.previousOperand = '';
                this.operation = undefined;
                this.updateDisplay();
                setTimeout(() => {
                    this.clear();
                }, 1500);
            }

            formatNumber(number) {
                if (number === 'Error') return 'Error';
                
                const stringNumber = number.toString();
                
                if (stringNumber.includes('e')) return stringNumber;
                
                const [integerPart, decimalPart] = stringNumber.split('.');
                const formattedInteger = parseInt(integerPart).toLocaleString('en-US');
                
                if (decimalPart != null) {
                    return `${formattedInteger}.${decimalPart}`;
                } else {
                    return formattedInteger;
                }
            }

            updateDisplay() {
                this.currentElement.textContent = this.formatNumber(this.currentOperand);
                
                if (this.operation != null && this.previousOperand !== '') {
                    this.previousElement.textContent = 
                        `${this.formatNumber(this.previousOperand)} ${this.operation}`;
                } else {
                    this.previousElement.textContent = '';
                }

                if (this.currentOperand === 'Error') {
                    this.currentElement.classList.add('error');
                } else {
                    this.currentElement.classList.remove('error');
                }
            }
        }

        const previousElement = document.getElementById('previous');
        const currentElement = document.getElementById('current');
        const calc = new Calculator(previousElement, currentElement);

        document.addEventListener('keydown', (e) => {
            if (e.key >= '0' && e.key <= '9') {
                const button = Array.from(document.querySelectorAll('button')).find(b => b.textContent === e.key);
                if (button) playClick(button);
                calc.appendNumber(e.key);
            }
            if (e.key === '.') {
                const button = Array.from(document.querySelectorAll('button')).find(b => b.textContent === '.');
                if (button) playClick(button);
                calc.appendNumber('.');
            }
            if (e.key === '+' || e.key === '-') {
                calc.chooseOperation(e.key);
            }
            if (e.key === '*') {
                calc.chooseOperation('×');
            }
            if (e.key === '/') {
                e.preventDefault();
                calc.chooseOperation('÷');
            }
            if (e.key === 'Enter' || e.key === '=') {
                e.preventDefault();
                calc.compute();
            }
            if (e.key === 'Escape') {
                calc.clear();
            }
        });
    </script>
</body>
</html>
