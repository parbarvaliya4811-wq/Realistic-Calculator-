            <button class="clear" onclick="playClick(this); calc.clear()">CE</button>
            <button class="clear" onclick="playClick(this); calc.clear()">AC</button>
            <button class="function" onclick="playClick(this); calc.toggleSign()">+/-</button>
            <button class="number zero" onclick="playClick(this); calc.appendNumber('0')">0</button>
