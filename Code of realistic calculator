            <button class="number" onclick="playClick(this); calc.appendNumber('1')">1</button>
            <button class="number" onclick="playClick(this); calc.appendNumber('2')">2</button>
            <button class="number" onclick="playClick(this); calc.appendNumber('3')">3</button>
            <button class="operator" onclick="playClick(this); calc.chooseOperation('-')">-</button>
            
