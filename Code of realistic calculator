        <div class="buttons">
            <!-- Row 1: Memory functions and 7-8-9-÷ -->
            <button class="memory" onclick="playClick(this); calc.memoryClear()">MC</button>
            <button class="memory" onclick="playClick(this); calc.memoryRecall()">MR</button>
            <button class="memory" onclick="playClick(this); calc.memoryAdd()">M+</button>
            <button class="number" onclick="playClick(this); calc.appendNumber('7')">7</button>
            <button class="number" onclick="playClick(this); calc.appendNumber('8')">8</button>
            <button class="number" onclick="playClick(this); calc.appendNumber('9')">9</button>
            <button class="operator" onclick="playClick(this); calc.chooseOperation('÷')">÷</button>
            
            <!-- Row 2: Memory/Functions and 4-5-6-× -->
            <button class="memory" onclick="playClick(this); calc.memoryStore()">MS</button>
            <button class="memory" onclick="playClick(this); calc.memorySubtract()">M-</button>
            <button class="function" onclick="playClick(this); calc.percentage()">%</button>
            <button class="number" onclick="playClick(this); calc.appendNumber('4')">4</button>
